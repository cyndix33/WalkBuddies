<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.aixin.walkbuddies.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="Hello World!"
        android:id="@+id/Hello">

        <EditText
            android:id="@+id/activity_search_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_name"
            android:inputType="text" />

        <EditText
            android:id="@+id/activity_search_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_phone"
            android:inputType="textPhonetic"/>
        <EditText
            android:id="@+id/activity_search_from"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/from_string"
            android:inputType="textPostalAddress" />

        <EditText
            android:id="@+id/activity_serach_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/to_string"
            android:inputType="textPostalAddress"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Search"/>

    </LinearLayout>

</LinearLayout>
